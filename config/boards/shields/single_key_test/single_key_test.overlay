/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "row2col";

        // 使用 nice!nano 的 P0.06 (D1) 作为行
        row-gpios = <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
        // 使用 nice!nano 的 P0.08 (D2) 作为列
        col-gpios = <&gpio0 8 GPIO_ACTIVE_HIGH>;
    };
};